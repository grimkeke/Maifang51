<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/id_login_hint"
        android:text="@string/login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/id_login_name"
        android:layout_below="@id/id_login_hint"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/id_login_password"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/id_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Switch
        android:id="@+id/id_save_preference"
        android:layout_below="@id/id_login_password"
        android:layout_alignRight="@id/id_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/save_session"
        android:layout_below="@id/id_login_password"
        android:layout_toLeftOf="@id/id_save_preference"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/id_login_button"
        android:text="@string/login"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_save_preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/id_register_button"
        android:text="@string/register"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
