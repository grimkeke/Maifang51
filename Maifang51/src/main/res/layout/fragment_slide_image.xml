<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_slide_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewFlipper android:id="@+id/id_view_flipper"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/id_top_page"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/id_view_flipper"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_top_message"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:layout_toLeftOf="@id/id_top_page"
        android:layout_alignBottom="@id/id_view_flipper"
        android:padding="1dp"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
